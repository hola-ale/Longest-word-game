<div class="container">
  <h1>New game</h1>
  <div class="letters">
    <div class="letter">
      <%= @letters[0] %>
    </div>
    <div class="letter">
      <%= @letters[1] %>
    </div>
    <div class="letter">
      <%= @letters[2] %>
    </div>
    <div class="letter">
      <%= @letters[3] %>
    </div>
    <div class="letter">
      <%= @letters[4] %>
    </div>
    <div class="letter">
      <%= @letters[5] %>
    </div>
    <div class="letter">
      <%= @letters[6] %>
    </div>
  </div>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="">
    <input type="submit" value="Play">
  </form>
</div>
